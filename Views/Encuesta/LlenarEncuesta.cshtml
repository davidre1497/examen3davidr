<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="LlenarEncuesta.aspx.cs" Inherits="Examen3David.LlenarEncuesta" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Llenar Encuesta</title>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <h2>Llenar Encuesta</h2>

            <% using (Html.BeginForm("GuardarEncuesta", "Encuesta", FormMethod.Post)) { %>
            <%= Html.AntiForgeryToken() %>

            <div class="form-group">
                <%= Html.LabelFor(model => model.NombreParticipante, new { @class = "control-label" }) %>
                <%= Html.TextBoxFor(model => model.NombreParticipante, new { @class = "form-control", required = "required" }) %>
                <%= Html.ValidationMessageFor(model => model.NombreParticipante, "", new { @class = "text-danger" }) %>
            </div>

            <div class="form-group">
                <%= Html.LabelFor(model => model.Edad, new { @class = "control-label" }) %>
                <%= Html.TextBoxFor(model => model.Edad, new { @class = "form-control", type = "number", required = "required", min = "18", max = "50" }) %>
                <%= Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" }) %>
            </div>

            <div class="form-group">
                <%= Html.LabelFor(model => model.CorreoElectronico, new { @class = "control-label" }) %>
                <%= Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control", type = "email", required = "required" }) %>
                <%= Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" }) %>
            </div>

            <div class="form-group">
                <%= Html.LabelFor(model => model.PartidoID, "Partido Político", new { @class = "control-label" }) %>
                <%= Html.DropDownListFor(model => model.PartidoID, new SelectList(ViewBag.Partidos, "PartidoID", "Nombre"), "-- Seleccionar --", new { @class = "form-control", required = "required" }) %>
                <%= Html.ValidationMessageFor(model => model.PartidoID, "", new { @class = "text-danger" }) %>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Encuesta</button>
            <% } %>
        </div>
    </form>
</body>
</html>